<div class="container">
  <div class="row" style= "margin: 20px auto;">
    <div class = "col">
      <div class ="float-left">
        <h2 class="title_h2 text-center">商品一覧</h2>
      </div>
    </div>
    <div class = "col">
      <div class ="float-right">
        <%= link_to "商品登録", new_admin_item_path %>
      </div>
    </div>
    
      <table class = "table table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th><%= link_to admin_item_path(item) do%><%= item.name %> <% end %></th>
            <th><%= item.price %></th>
            <th><%= item.genre.name %></th>
            <% if item.is_saled %>
              <th>販売中</th>
            <% else %>
              <th>販売停止中</th>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<%= paginate @items %>