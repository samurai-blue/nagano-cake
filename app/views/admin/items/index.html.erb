<!--h2 class="head-line title_h2 text-center admin_product_index">商品一覧</h2-->
<div>
  <h2 class="title_h2 text-center">商品一覧</h2>
</div>

<!--table class="table table-hover table-inverse"-->
<table class = "table table-hover">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <th><%= link_to item_path(item) do%><%= item.name %> <% end %></th>
      <th><%= item.price %></th>
      <th><%= item.genre.name %></th>
      <% if item.is_saled %>
        <th>販売中</th>
      <% else %>
        <th>販売停止中</th>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>
