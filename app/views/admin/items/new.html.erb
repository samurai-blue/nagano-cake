<div class="row">
    <div class="col-xs-12">
        <h2 class="head-line title_h2 text-center">商品新規登録</h2>
        <%= form_with model:@item, local:true do |f| %>
            <div class="col-xs-4 col-xs-offset-1">

    <div class="col-xs-6">
    <div class="actions col-xs-7">
        <td>商品画像 <%= f.attachment_field :image %></td>
        
        <td>商品名 <%= f.text_field :name %></td>


        <P>商品説明</P>
            <%= f.text_field :description %>
        <p>ジャンル</p>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>

        <P>税抜価格</P>
            <%= f.text_field :price %>

        <P>販売ステータス</P>
            <%= f.radio_button :is_saled, true %><P>販売中</P>
            <%= f.radio_button :is_saled, false %><P>販売停止中</P>

            <%= f.submit '新規登録' %>
    </div>
    </div>

    </div>
</div>


<% end %>