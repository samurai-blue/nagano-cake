<div class="container">
<div class="row" style= "margin: 20px auto;">


<%= form_with(model: @item, url:admin_item_path, local: true ,method: :patch) do |f| %>
<div class="justify-content-center">

  <h4 style="margin-bottom: 20px; text-left; padding: 10px;">商品編集</h4>

  <div class="form-group">
      <p>商品画像</p>
      <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
      <p>商品名</p>
      <%= f.text_field :name %>
  </div>

  <div class="form-group">
      <p>商品説明</p>
      <%= f.text_field :description %>
  </div>

  <div class="form-group">
      <p>ジャンル</p>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  </div>

  <div class="form-group">
      <P>税抜価格</P>
      <%= f.text_field :price %>
  </div>


  <div class="form-group">
    <%= f.label :販売ステータス%>
    <div class="radio-inline">
      <%= f.radio_button :is_saled, true  %>
      <%= f.label(:is_saled, "販売中", value: "販売中")  %>
      <%= f.radio_button :is_saled, false %>
      <%= f.label(:is_saled, "販売停止", value: "販売停止")  %>
    </div>
  </div>


<%= f.submit '変更を保存' %>
</div>
<% end %>

</div>
</div>
