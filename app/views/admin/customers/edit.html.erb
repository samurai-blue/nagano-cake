<div class="container">

      <h2 class="head-line title_h2 text-center">
        <%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集
      </h2>
    <div class="row">
      <div class="col-lg-10 offset-lg-1">
      <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>
        <div class="form-group">
          <%= f.label :"会員ID" %>
          <%= f.label :"#{@customer.id}" %>
        </div>

        <div class="form-group">
          <%= f.label :"氏名"%>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>

        <div class="form-group">
          <%= f.label :"フリガナ" %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="form-group">
          <%= f.label :"会員ステータス" %>
          　<%= f.radio_button :is_valid, true %>
          　<%= f.label :is_valid, "退会済", {value: :true, style: "display: inline-block;"} %>
          　<%= f.radio_button :is_valid, false %>
        　  <%= f.label :is_valid, "有効", {value: :false, style: "display: inline-block;"} %>
        </div>

        <div>
          <%= f.submit '変更を保存' ,class: "btn btn-success" %>
        </div>
        <div>
          <%= link_to "戻る", admin_customer_path(@customer), class: "glyphicon glyphicon-home btn btn-danger" %>
        </div>
     <% end %>

    </div>
</div>