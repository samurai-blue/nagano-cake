<div class="container">
<h2 class="head-line title_h2 text-center">会員一覧</h2>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <table class="table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info col-xs-1" >
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer), class: "btn-link"  do %>
                <p><%= customer.last_name %> <%= customer.first_name %></p>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td class="col-xs-2">
              <% if customer.is_valid == true%>
                <p>退会済み</p>
              <% else %>
                <p>有効</p>
              <% end %>
            </td>
          </tr>
         <% end %>
      </tbody>
    </table>
  </div>
    <div class= "text-center" ><%= paginate(@customers) %></div>
</div>
</div>

