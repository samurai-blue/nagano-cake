<div class="container">
<div class="row">

<div class="col-lg-3">
  <h2 class="head-line title_h2 text-left">会員一覧</h2>
  </div>
</div>

 <div class ="row">
   <!--table class="table table-hover table-inverse"-->
    <table class = "table table-hover">
      <thead class = "thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info col-xs-1" >
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer), class: "btn-link"  do %>
                <p><%= customer.last_name %> <%= customer.first_name %></p>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td class="col-xs-2">
              <% if customer.is_valid == true%>
                <p>有効</p>
              <% else %>
                <p>退会済み</p>
              <% end %>
            </td>
          </tr>
         <% end %>
      </tbody>
    </table>
  </div>
    <div class= "text-center" ><%= paginate(@customers) %></div>
</div>
