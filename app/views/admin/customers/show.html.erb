<div class="container">
  <h2 class="head-line title_h2 text-center">
    <%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細
  </h2>
<div class="row">
	<div class="col-xs-1 col-xs-10 col-xs-offset-1">
		<table>
		<tbody>
			<tr>
				<td>氏名</td>
				<td><p><%= @customer.last_name %> <%= @customer.first_name %></p></td>
			</tr>
			<tr>
				<td>カナ</td>
				<td><p><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></p></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td><%= @customer.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td><%= @customer.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td><%= @customer.telephone_number %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= @customer.email %></td>
			</tr>
			<tr>
				<td>ステータス</td>
              	<td>
              		<% if @customer.is_valid == true%>
               			<p>退会済み</p>
              		<% else %>
                		<p>有効</p>
              		<% end %>
              	</td>
			</tr>

		</tbody>
	</table>

		<%= link_to "編集する",edit_admin_customer_path(@customer), class: "glyphicon glyphicon-pencil btn btn-success" %>
	</div>

	</div>
</div>
