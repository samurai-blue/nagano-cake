<div class="container">

<h3 class="head-line title_h2 text-left" style="margin-bottom: 20px;">ジャンル編集</h3>
<div class="row">

  <div class="col-lg-10">
    <%= form_with model:@genre,local:true, url: admin_genre_path do |f| %>
    <% if @genre.errors.any? %>
      <div id="error_explanation">
        <h3>変更出来ませんでした</h3>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li>空白で登録は出来ません</li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='create-foem'>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存' , class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>

</div>
</div>
