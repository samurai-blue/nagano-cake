<div class="container">

<h3 class="head-line title_h2 text-left" style="margin-bottom: 20px;">ジャンル一覧・追加</h3>

  <div class="row">
    <div class="col-lg-10">
      <%= form_with model:@genre,local:true, url: admin_genres_path do |f| %>
        <% if @genre.errors.any? %>
          <div id="error_explanation">
            <h3>保存されませんでした</h3>
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li>空白で登録は出来ません</li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class='form-group'>
          <%= f.label :ジャンル名, class: "control-label" %>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>

      <div class="row">
        <table class="table table-hover col-lg-5" style="margin-top: 40px;">
          <thead class="thead-dark">
            <th>ジャンル</th>
            <th></th>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>