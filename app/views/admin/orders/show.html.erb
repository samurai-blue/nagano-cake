<div class = "container">
  <div class ="row">
    <div class="col-lg-5">
      <h2 class="title_h2 text-left" style="margin-bottom: 30px;">注文履歴詳細</h2>
      <table class = "table">
            <tr>
              <th>購入者</th>
              <td><%= @order.name %></td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td><%= @order.send_to_address %></td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td><%= @order.order_status %></td>
            </tr>


      </table>

    </div>
    <div class="col-lg-7"></div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <table class="table table-hover" style="width: 95%">
        <thead class="thead-right">
          <tr>
            <th>商品名</th>
            <th>単価（税込み）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td> ¥<%= order_detail.item.price.to_s(:delimited) %></td>
            <td><%= order_detail.quantity %></td>
            <td>
                <% sum_all = 0 %>
                <% sub_total = price_include_tax(order_detail.total_payment).to_i * order_detail.quantity %>
                <% sum_all += sub_total.to_i %>
                ¥<%= sum_all.to_s(:delimited) %>
            </td>
            <%= form_for(order_detail, url: admin_order_details_path(order_detail), method: :patch) do |f| %>
		        <td>
		        	<%= f.select :production_status, OrderDetail.production_statuses.map { |k, v| [t("OrderDetail.production_status.#{k}"), v]}, class: "order_status" %>
		          <%= f.submit '更新'  ,class: "btn btn-warning" %>
            </td>
		        <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-lg-4　d-flex align-items-end">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @sum %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_cost %>円</td>
        </tr>
        <tr>
          <th>請求合計金額</th>
          <td>
            <% @sum += @order.shipping_cost %>
            <%= @sum %>円</td>
        </tr>

      </table>
    </div>
  </div>
</div>

