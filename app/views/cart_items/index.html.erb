<div class="cart_container" style="width:90%; margin: 20px auto; position:relative;">

<strong style="font-size:18px;">
	<img src="/assets/cart_icon.jpg" style="display:inline-block; height: 25px;">
	ショッピングカート
</strong>

<div class="row" style="width:100%; height:20px;"></div>

<div style="position:absolute; top: 30px; right: 0;">
	<%= link_to destroy_all_cart_items_path, method: :delete do %>
		<span class="btn btn-danger">カートを空にする</span>
	<% end %>
</div>

<!--< %= form_for cart_items_path, method: :patch do |f| %>-->
<span style="color:#266846;">表示されている価格は全て税込です。</span>
<table class="table table-bordered">
	<tr style="background:#dad7d7; border: 1px solid #fff;">
		<th>商品名</th>
		<th>単価</th>
		<th>数量</th>
		<th>小計</th>
		<th></th>
	</tr>
 
 <% sum_all = 0 %>
 <% @cart_items.each do |cart_item| %>

   <div class="row space-sm">
      <div class="col-lg-3">
        <!--< %= link_to item_path(cart_item.item) do %>-->
        <!--< %= attachment_image_tag(cart_item.item, :image, :fill, 100, 100, fallback: "no_img.jpg") %>-->
        <!--< % end %>-->
        <!--なんかよくわかんないけどエラー出てるからいったんコメントアウト-->
      </div>
      <div class="col-lg-2">
        <%= link_to item_path(cart_item.item) do %>
        <%= cart_item.item.name %>
        <% end %>
      </div>
      <div class="col-lg-2">
        <%= price_include_tax(cart_item.item.price) %>
      </div>
      <div class="col-lg-2">
        <%= form_with model: cart_item, local: true do |f| %>
        <%= f.number_field :quantity, value: cart_item.quantity, min:1, max:99  %>
        <%= f.submit "変更", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-lg-2">
        <%= sum_item = price_include_tax(cart_item.item.price).to_i * cart_item.quantity %>円
        <% sum_all += sum_item %>
      </div>
      <div class="col-lg-1">
        <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"%>
      </div>
    </div>
    <% end %>
	</table>
	
    <!-- 合計金額 + 情報入力 -->
    <div class="row space">
      <div class="col-lg-2 offset-lg-7 space-sm">
        <%= link_to "買い物を続ける", customer_top_path, class: "btn btn-danger "%>
      </div>
      <div class="col-lg-3 space-sm">
        <div class="row">
          <h4>合計金額：<%= sum_all %>円</h4>
        </div>
      </div>
    </div>
    
    <div class="row space">
      <div class="col-lg-3 offset-lg-9">
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-danger btn-lg" %>
      </div>
    </div>

</div>	
