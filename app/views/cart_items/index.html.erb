<div class="cart_container" style="width:90%; margin: 20px auto; position:relative;">

<strong style="font-size:18px;">
  ショッピングカート
</strong>

<div class="row" style="width:100%; height:20px;"></div>

<div style="position:absolute; top: 30px; right: 0;">

</div>



  <div class="row space">
    <div class=" col-lg-10 offset-lg-1">
      <span style="color:#266846;">表示されている価格は全て税込です。</span>
      <%= link_to destroy_all_cart_items_path, method: :delete do %>
        <span class="btn btn-danger float-right" style="margin-bottom: 20px;">カートを空にする</span>
      <% end %>
      <table class="table table-hover">
        <thead>
          <tr style="background:#dad7d7; border: 1px solid #fff;">
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
  
        <tbody>
           <% sum_all = 0 %>>
            <% @cart_items.each do |cart_item| %>
              <tr>
                  <!--< %= link_to item_path(cart_item.item) do %>-->
                  <!--< %= attachment_image_tag(cart_item.item, :image, :fill, 100, 100, fallback: "no_img.jpg") %>-->
                  <!--< % end %>-->
                  <!--なんかよくわかんないけどエラー出てるからいったんコメントアウト-->
                <td>
                  <%= link_to item_path(cart_item.item) do %>
                  <%= cart_item.item.name %>
                  <% end %>
                </td>
                <td>
                  <%= price_include_tax(cart_item.item.price) %>
                </td>
                <td>
                  <%= form_with model: cart_item, local: true do |f| %>
                  <%= f.number_field :quantity, value: cart_item.quantity, min:1, max:99  %>
                  <%= f.submit "変更", class: "btn btn-info" %>
                  <% end %>
                </td>
                <td>
                  <%= sum_item = price_include_tax(cart_item.item.price).to_i * cart_item.quantity %>円
                  <% sum_all += sum_item %>
                </td>
                <td>
                  <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"%>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-1"></div>
  </div>

    <!-- 合計金額 + 情報入力 -->
    <div class="row">
      <div class="col-lg-2 offset-lg-2 float-left">
        <%= link_to "買い物を続ける", customer_top_path, class: "btn btn-primary float-left"%>
      </div>

      <div class="col-lg-5 offset-lg-3">
      <table class="table table-hover float-right">
          <tr>
            <td>合計金額</td>
            <td><%= sum_all %>円</td>
          </tr>
      </table>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-3 offset-lg-4">
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-lg" %>
      </div>
      <div class="col-lg-5"></div>
    </div>
</div>
</div>