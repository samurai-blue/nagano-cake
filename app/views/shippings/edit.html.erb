
<div class="edit-container" style="width:50%; margin: 20px auto;">
  <h2 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">配送先編集</h2>

  <%= form_with model: @shipping, url:customer_shipping_path, local:true do |f| %>
  <div class="shipping_addres col-xs-10">
   <div class="form-group">
     <%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label" %>
     <%= f.text_field :postal_code, class: "col-xs-2 form-control-static postal_code" %> <!--, class: 'form-control book_title'は必要？-->
   </div>
   <div class="form-group">
     <%= f.label :"住所", class: "col-xs-3 control-label" %>
     <%= f.text_field :address, style: "width: 80%;" %> <!--, class: 'form-control book_title'は必要？-->
   </div>
   <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field :name %> <!--, class: 'form-control book_title'は必要？-->
   </div>
   <div class="form-group">
    <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
   </div>
  <% end %>
</div>






