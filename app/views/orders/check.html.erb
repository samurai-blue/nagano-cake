<div class="container" style="margin-top: 20px;">

  <h2 style="margin-bottom: 30px;">注文情報確認</h2>
  <div class="row">

     <!--注文する商品の詳細-->
      <!-- table class="table table-hover table-inverse table-bordered "-->
      <table class="table table-hover table-bordered col-lg-6">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% sum_all = 0 %>
          <% @cart_items.each do |cart| %>

          <tr>
            <td class="text-left">
              <%= link_to item_path(cart.item) do %>
              <%= attachment_image_tag(cart.item, :image, :fill, 100, 100, fallback: "no_img.jpg") %>
              <% end %>
                                  <!--< %= image %>-->
                                  <!--< %= attachment_image_tag(item, :image, :fill, 220, 180, fallback: 'no_image.jpg') %>
                                  <!--< %= cart_item.name %>-->
                                  <!--< %= cart.item.name%>-->
              <%= link_to item_path(cart.item) do %>
              <%= cart.item.name %>
              <% end %>
            </td>
            <td class="text-right">
              <!--< %= price(item) %>-->
              <!--< %= cart.item.price %>-->
              <%= price_include_tax(cart.item.price) %>
            </td>
            <td class="text-right">
              <!--< %= quantity %>-->
              <%= cart.quantity %>
            </td>
            <td class="text-right">
              <!--< %= price(cart)-->
              <%= sum_item = price_include_tax(cart.item.price).to_i * cart.quantity %>円
              <% sum_all += sum_item %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    <!--金額確認テーブル-->
    <div class="col-lg-3 offset-lg-3">
      <table class="table table-hover table-condensed table-bordered">
      <!--table class="table table-hover table-condensed table-bordered"-->
        <tr>
          <th>送料</th>
          <td> <%= @order.shipping_cost %>円</td>
          <!--送料はテーブルにdefaultで800にて設定-->
        </tr>
        <tr>
          <th>商品合計</th>

          <td><%= sum_all.to_i %>円</td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td>
            <% billling_amount = sum_all + @order.shipping_cost.to_i %>
            <%= billling_amount.to_i %>円
          </td>
        </tr>
      </table>
    </div>
  </div>

    <div class="row">
      <div class="col-lg-12">
        <h4><b>支払い方法</b></h4>
        <p><%= @order.payment_method %></p>
      <div>
    <div>


    <h4>お届け先</h4>
    <p>〒<%= @order.postal_code %><%= @order.send_to_address %>
    <br>
    <%= @order.name %>
    </p>

    <%= form_with(model: @order, local: true) do |f| %>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <%= f.hidden_field :postal_code, :value => "#{@order.postal_code}" %>
    <%= f.hidden_field :send_to_address, :value => "#{@order.send_to_address}" %>
    <%= f.hidden_field :name, :value => "#{@order.name}" %>


    <div class="text-center">
       <%= f.submit "購入を確定する", class: "btn btn-danger btn-lg" %>
     <!-- < %= link_to '注文を確定する', order_finish_path, method: :post, class:"btn btn-success" %>-->
    </div>
     <!--< % else %>-->
    <% end %>
  </div>
</div>

