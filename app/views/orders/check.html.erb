<div class="container" style="margin-top: 20px;">

  <h2 style="margin-bottom: 30px;">注文情報確認</h2>
  <div class="row">

     <!--注文する商品の詳細-->
      <!-- table class="table table-hover table-inverse table-bordered "-->
      <table class="table table-hover table-bordered col-lg-6">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart| %>
            <tr>
              <td class="text-left">
                <!--< %= image %>-->
                <!--< %= attachment_image_tag(item, :image, :fill, 220, 180, fallback: 'no_image.jpg') %>
                <!--< %= cart_item.name %>-->
                <%= cart.item.name%>
              </td>
              <td class="text-right">
                <!--< %= price(item) %>-->
                <%= cart.item.price %>
              </td>
              <td class="text-right">
                <!--< %= quantity %>-->
                <%= cart.quantity %>
              </td>
              <% sum_all = 0 %>
              <td class="text-right">
                <%= sum_item = price_include_tax(cart.item.price).to_i * cart.quantity %>円
                <% sum_all += sum_item %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <!--金額確認テーブル-->
    <div class="col-lg-3 offset-lg-3">
      <table class="table table-hover table-condensed table-bordered">
      <!--table class="table table-hover table-condensed table-bordered"-->
        <tr>
          <th>送料</th>
          <td>８００</td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td>2</td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td>1,000,000,00</td>
        </tr>
      </table>
    </div>
  </div>

    <div class="row">
      <div class="col-lg-12">
        <h4><b>支払い方法</b></h4>
        <p><%= @order.payment_method %></p>
      <div>
    <div>

    <div class="row">
      <div class="col-lg-12">
        <h4><b>お届け先</b></h4>
        <p>〒<%= @order.postal_code %><%= @order.send_to_address %>
        <br>
        <%= @order.name %>
        </p>
        <div class="text-center">
          <%= link_to '注文を確定する', order_finish_path, class:"btn btn-success" %>
        </div>
      </div>
    <div>
      
</div>
