<div class="container" style="margin-top: 20px;">
  <h4>注文情報確認</h4>
  <div class="row">
    <div class="col-xs-8">
     <!-- < % if current_customer.cart_items.present? %>-->
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          < % @cart_items.each do |cart| %>
          <tr>
            <td class="text-left">
              < %= image %>
              < %= cart_item.name %>
            </td>
            <td class="text-right">
              < %= price(item) %>
            </td>
            <td class="text-right">
              < %= quantity %>
            </td>
            <td class="text-right">
              < %= price(cart)
            </td>
          </tr>
          < % end %>
        </tbody>
      </table>
    </div>

    <div class="col-xs-3 total_payment">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th>送料</th>
          <td>８００</td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td>< %= price(total) %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td>< %= total_payment %></td>
        </tr>
      </table>
    </div>

    <h4>支払い方法</h4>
    <p><%= @order.payment %></p>

    <h4>お届け先</h4>
    <p>〒<%= @order.postal_code %><%= @order.address %>
    <br>
    <%= @order.name %>
    </p>
    <div  class="text-center">
      <%= link_to '注文を確定する', finish_orders_path, class:"btn btn-success" %>
    </div>
     <!--< % else %>
      < % end %>-->
  </div>
</div>
