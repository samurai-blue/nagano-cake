  <div class="container">
    <div class="display: inline-block">
      <h2>全商品一覧</h2>
      <h4> （<%= Item.all.count %>種） </h4>
    </div>
  </div>
  <div class="container">
    <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-3 item-box space", style="margin-top: 40px;">

        <%= link_to item_path(item) do %>
          <div>
            <%= attachment_image_tag(item, :image, style: "max-width: 100%", fallback: 'no_image.jpg', size: '300x200') %>
          </div>
          <div class="col-lg-1"></div>

          <div><h4><%= item.name %></h4></div>
        <% end %>

        <div>
          <h4><%= price_include_tax(item.price) %></h4>
        </div>

      </div>
    <% end %>
    </div>
    <div class = "row align-items-center" >
      <div class = "col" >
        <%= paginate @items %>
    </div>
  </div>



