<h1>会員情報編集</h1>

<%= form_with(model:@customer, url:customer_path, local: true ,method: :put) do |f| %>


  <div class="form-group">
    <h2>氏名</h2>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="actions col-xs-9 col-xs-offset-3">
    <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
    <%= link_to "退会する", out_customer_path, class: "glyphicon glyphicon-tint btn btn-danger" %>
  </div>
<% end %>

<%= link_to "編集内容を保存", customer_path %>
