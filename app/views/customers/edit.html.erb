<%= form_with(model:@customer, url:customer_path, local: true ,method: :put) do |f| %>
<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
